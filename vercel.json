{
  "version": 2,
  "regions": ["iad1"],
  "crons": [
    { "path": "/api/poll-new-lead", "schedule": "* * * * *" },
    { "path": "/api/cron/schedule-sms-reminders", "schedule": "*/15 * * * *" },
    { "path": "/api/affiliates/cron/autopayouts?token=@CRON_SECRET", "schedule": "0 16 * * 5" },
    { "path": "/api/cron", "schedule": "0 17 * * *" },
    { "path": "/api/cron/twilio-daily-sync", "schedule": "0 16 * * *" },
    { "path": "/api/cron/scan-folder-enrollments", "schedule": "*/2 * * * *" },
    { "path": "/api/cron/run-drips", "schedule": "*/5 * * * *" },
    { "path": "/api/cron/check-a2p-status", "schedule": "*/30 * * * *" },
    { "path": "/api/google/sheets/poll?token=@CRON_SECRET", "schedule": "* * * * *" },
    { "path": "/api/admin/audit-sheets-cron?token=@CRON_SECRET", "schedule": "*/15 * * * *" },

    /* NEW: A2P targeted sync (idempotent Safe-by-header if you implemented x-cron-key; if not, leave as token) */
    { "path": "/api/a2p/sync-status?token=@CRON_SECRET", "schedule": "*/15 * * * *" },

    /* NEW: Drips folder watcher (the cron that enrolls new folder leads automatically) */
    { "path": "/api/drips/drips-folder-watch", "schedule": "*/2 * * * *" }
  ]
}
